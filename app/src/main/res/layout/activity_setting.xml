<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tl="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:background="#176E43"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
        <LinearLayout
            android:paddingBottom="30dp"
            android:background="@drawable/shape_bg_setting"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <androidx.appcompat.widget.Toolbar
                app:contentInsetStart="0dp"
                app:contentInsetStartWithNavigation="0dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <LinearLayout

                    android:paddingTop="20dp"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:orientation="vertical">
                    <LinearLayout
                        android:paddingLeft="@dimen/dp10"
                        android:layout_width="match_parent"
                        android:layout_height="40dp">
                        <ImageView
                            android:id="@+id/back"
                            android:layout_gravity="center"
                            android:layout_width="40dp"
                            android:src="@drawable/drawable_back"
                            android:layout_height="40dp"/>
                        <TextView
                            android:text="编辑资料"
                            android:layout_gravity="center"
                            android:textSize="20dp"
                            android:textStyle="bold"
                            android:textColor="#000"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"/>

                    </LinearLayout>


                </LinearLayout>

            </androidx.appcompat.widget.Toolbar>
            <LinearLayout

                android:gravity="center"
                android:layout_marginTop="40dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">
                <ImageView
                    android:maxHeight="200dp"
                    android:maxWidth="200dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_jiahao"
                    android:id="@+id/iv_tou"
                    />
                <TextView
                    android:layout_marginTop="25dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="叫什么好呢"
                    android:textStyle="bold"
                    android:textSize="27dp"
                    android:textColor="#000"
                    android:id="@+id/name"
                    />
                <LinearLayout
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/qianming"
                        android:layout_gravity="bottom"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="这个人很懒什么也没留下.."
                        android:textStyle="bold"
                        android:textSize="20dp"
                        android:textColor="#000"
                        android:lines="1"
                        />
                    <ImageView
                        android:layout_marginLeft="@dimen/dp10"
                        android:layout_width="30dp"
                        android:layout_height="30dp"
                        android:src="@drawable/ic_pancile"
                        android:id="@+id/pan"
                        />
                </LinearLayout>
                <TextView
                    android:id="@+id/exit"
                    android:layout_marginTop="35dp"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:text="退出登录"
                    android:textStyle="bold"
                    android:textColor="#fff"
                    android:textSize="20dp"
                    android:background="@drawable/shape_round_green_paihangbang"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="10dp"
                    android:paddingBottom="10dp"
                    />
            </LinearLayout>
        </LinearLayout>
    <LinearLayout
        android:id="@+id/upd_pwd"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改密码"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/upd_bg"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="修改主页图片"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/banben"
        android:layout_marginLeft="20dp"
        android:layout_marginRight="20dp"
        android:layout_marginTop="35dp"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="20dp"


            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="应用版本"
            />
        <TextView
            android:layout_weight="1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <TextView
            android:textColor="#fff"
            android:textStyle="bold"
            android:textSize="25dp"

            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text=">"
            />
    </LinearLayout>
    <LinearLayout
        android:id="@+id/help"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_marginTop="35dp"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <TextView
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="20dp"


        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="帮助反馈"
        />
    <TextView
        android:layout_weight="1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"/>
    <TextView
        android:textColor="#fff"
        android:textStyle="bold"
        android:textSize="25dp"

        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text=">"
        />
</LinearLayout>
</LinearLayout>