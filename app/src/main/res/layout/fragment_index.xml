<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tl="http://schemas.android.com/tools"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="match_parent">
    <com.scwang.smart.refresh.layout.SmartRefreshLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:srlEnablePreviewInEditMode="true"
        android:id="@+id/smartRefresh"
        app:srlEnableLoadMore="true"
        >
        <com.scwang.smart.refresh.header.ClassicsHeader
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:srlPrimaryColor="#00FFFFFF"
            />

        <androidx.coordinatorlayout.widget.CoordinatorLayout
                android:layout_marginBottom="-100dp"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                xmlns:android="http://schemas.android.com/apk/res/android">
                <com.google.android.material.appbar.AppBarLayout
                    android:background="#F7F2F0"
                    android:layout_width="match_parent"
                    android:layout_height="620dp"
                    android:layout_marginTop="-100dp"
                    android:id="@+id/appbar_layout"
                    >
                    <com.google.android.material.appbar.CollapsingToolbarLayout
                        android:id="@+id/collapsing_toolbar_layout"
                        android:layout_width="match_parent"
                        android:layout_height="570dp"
                        app:layout_scrollFlags="scroll|enterAlwaysCollapsed|exitUntilCollapsed"
                        >


                        <RelativeLayout
                            app:layout_scrollFlags="scroll"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content">
                            <com.youth.banner.Banner
                                xmlns:app="http://schemas.android.com/apk/res-auto"
                                android:id="@+id/banner"
                                android:layout_width="match_parent"
                                android:layout_height="300dp"
                                />
                            <!--//水波纹-->
                            <com.scwang.wave.MultiWaveHeader
                                android:layout_marginTop="230dp"
                                android:id="@+id/waveHeader"
                                android:layout_width="match_parent"
                                app:mwhColorAlpha="0.7"
                                app:mwhWaves="MultiWave"
                                android:scaleY="-1"
                                app:mwhProgress="0.5"
                                app:mwhVelocity="3"
                                app:mwhStartColor="#F0EDE8"
                                app:mwhCloseColor="#F0EDE8"
                                android:layout_height="70dp"/>

                            <LinearLayout
                                android:id="@+id/paihangbang"
                                android:layout_below="@id/waveHeader"
                                android:layout_width="match_parent"
                                android:layout_height="60dp"
                                android:background="#F0EDE8">
                                <TextView
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginLeft="@dimen/dp15"
                                    android:background="@drawable/shape_round_green_paihangbang"
                                    android:layout_gravity="center"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:textStyle="bold"
                                    android:textColor="#fff"
                                    android:textSize="18dp"
                                    android:paddingTop="7dp"
                                    android:paddingBottom="7dp"
                                    android:paddingLeft="20dp"
                                    android:paddingRight="20dp"

                                    android:text="排/行/榜"/>
                                <View
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_weight="1"
                                    />
                                <TextView
                                    android:layout_marginTop="7dp"
                                    android:layout_marginBottom="7dp"
                                    android:layout_marginRight="@dimen/dp15"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:text="更多>"
                                    android:layout_gravity="center"
                                    android:textStyle="bold"
                                    android:textColor="#000"
                                    android:textSize="@dimen/dp20"
                                    />
                            </LinearLayout>

                            <HorizontalScrollView
                                android:id="@+id/hsv_list"
                                android:layout_below="@id/paihangbang"
                                android:layout_width="match_parent"
                                android:scrollbars="none"
                                android:background="#F0EDE8"
                                android:layout_height="210dp">
                                <LinearLayout
                                    android:orientation="horizontal"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <GridView
                                        android:id="@+id/grid"
                                        android:scrollbars="none"
                                        android:layout_width="match_parent"
                                        android:layout_height="match_parent"
                                        android:gravity="center"
                                        android:numColumns="auto_fit"
                                        android:stretchMode="spacingWidthUniform" >
                                    </GridView>
                                </LinearLayout>

                            </HorizontalScrollView>
                        </RelativeLayout>

                        <androidx.appcompat.widget.Toolbar
                            android:layout_marginTop="98dp"
                            android:id="@+id/toolbar"
                            android:layout_width="match_parent"
                            android:layout_height="90dp"
                            android:background="#0000"
                            app:layout_collapseMode="pin"
                            android:paddingTop="15dp"
                            >
                            <!--TitleStar-->

                            <RelativeLayout
                                android:layout_marginLeft="10dp"
                                android:layout_marginTop="10dp"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content">
                                <LinearLayout
                                    android:id="@+id/ll_position"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content">
                                    <RelativeLayout
                                        android:layout_width="wrap_content"
                                        android:layout_height="wrap_content">

                                        <TextView
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="宁波市"
                                            android:textSize="25dp"
                                            android:textStyle="bold"
                                            android:textColor="#213"
                                            android:id="@+id/city"
                                            ></TextView>
                                        <TextView
                                            android:layout_below="@+id/city"
                                            android:id="@+id/weather"
                                            android:textStyle="bold"
                                            android:textColor="#000"
                                            android:layout_width="wrap_content"
                                            android:layout_height="wrap_content"
                                            android:text="晴 26℃"
                                            android:paddingLeft="5dp"
                                            />

                                    </RelativeLayout>
                                    <ImageView
                                        android:visibility="gone"
                                        android:layout_width="20dp"
                                        android:layout_height="wrap_content"
                                        android:src="@mipmap/down"></ImageView>

                                </LinearLayout>


                            <RelativeLayout
                                android:id="@+id/rl_search"
                                android:layout_toRightOf="@id/ll_position"
                                android:layout_centerVertical="true"
                                android:layout_width="wrap_content"
                                android:layout_height="wrap_content">

                                <TextView
                                    android:layout_width="230dp"
                                    android:layout_height="40dp"
                                    android:background="@drawable/shape_round"
                                    android:id="@+id/serch"
                                    android:paddingLeft="45dp"
                                    android:hint="放假去哪玩？"
                                    android:textSize="18dp"
                                    android:gravity="center_vertical"
                                    android:layout_marginLeft="20dp"
                                    />
                                <ImageView
                                    android:layout_toLeftOf="@id/serch"
                                    android:layout_centerVertical="true"
                                    android:src="@mipmap/fangda"
                                    android:layout_width="20dp"
                                    android:layout_marginRight="-50dp"
                                    android:layout_height="20dp"
                                    >
                                </ImageView>
                            </RelativeLayout>
                                <ImageView
                                    android:layout_width="20dp"
                                    android:layout_height="20dp"
                                    android:layout_centerVertical="true"
                                    android:layout_alignParentRight="true"
                                    android:src="@drawable/ic_jiahao"
                                    android:layout_marginRight="@dimen/dp20"
                                    />

                            </RelativeLayout>

                            <!--TitleEnd-->
                        </androidx.appcompat.widget.Toolbar>

                    </com.google.android.material.appbar.CollapsingToolbarLayout>

                    <com.flyco.tablayout.CommonTabLayout
                        android:paddingTop="@dimen/dp10"
                        android:id="@+id/tl_6"
                        android:layout_width="match_parent"
                        android:layout_height="50dp"
                        android:background="#F0EDE8"
                        app:tl_iconVisible="false"
                        app:tl_indicator_corner_radius="1.5dp"
                        app:tl_indicator_width="25dp"
                        app:tl_indicator_color="#176E43"
                        app:tl_indicator_anim_duration="1000"
                        app:tl_indicator_bounce_enable="true"
                        android:layout_centerVertical="true"
                        app:tl_textsize="18dp"
                        app:tl_textBold="true"
                        app:tl_subtextBold="true"
                        app:tl_subtextsize="20dp"
                        app:tl_textUnselectColor="#000"
                        app:tl_textSelectColor="#176E43"
                        app:tl_subtextUnselectColor="#000"
                        app:tl_subtextSelectColor="#176E43"
                        app:tl_indicator_margin_bottom="10dp"
                        />
                </com.google.android.material.appbar.AppBarLayout>

                    <androidx.core.widget.NestedScrollView
                        app:layout_behavior="@string/appbar_scrolling_view_behavior"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                        <LinearLayout
                            android:layout_width="match_parent"
                            android:layout_height="match_parent"
                            android:orientation="vertical">
                            <androidx.recyclerview.widget.RecyclerView
                                android:id="@+id/recyclerView"
                                android:layout_marginLeft="20dp"
                                android:layout_marginRight="20dp"
                                android:layout_width="match_parent"
                                android:layout_height="match_parent"/>
                            <!--Content End-->
                        </LinearLayout>
                    </androidx.core.widget.NestedScrollView>
            </androidx.coordinatorlayout.widget.CoordinatorLayout>

        <com.scwang.smart.refresh.footer.ClassicsFooter
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
    </com.scwang.smart.refresh.layout.SmartRefreshLayout>

</LinearLayout>
