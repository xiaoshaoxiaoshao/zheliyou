<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        >
        <ImageView
            android:layout_width="match_parent"
            android:layout_height="480dp"
            android:background="@drawable/shape_bg_yuan"
            android:layout_alignParentBottom="true"
            android:id="@+id/bg_img"
            />
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="430dp"
            android:layout_marginTop="@dimen/dp50"
            android:layout_marginRight="@dimen/dp50"
            android:layout_marginLeft="@dimen/dp50"
            android:orientation="vertical"
            android:layout_marginBottom="10dp"
            android:layout_alignParentBottom="true"

            >
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">
            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="欢迎登录"
                android:textSize="30dp"
                android:textStyle="bold"
                android:textColor="#000"
                android:layout_weight="1"
                />
            <ImageView
                android:layout_width="30dp"
                android:id="@+id/click"
                android:src="@drawable/ic_quxiao"
                android:layout_height="30dp"
                />
        </LinearLayout>
            <LinearLayout
                android:id="@+id/ll_email"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="40dp"
                    app:srcCompat="@drawable/ic_email"
                    android:padding="9dp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">

                    <TextView
                        android:id="@+id/tv_email"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:layout_marginLeft="3dp"
                        android:text="邮箱"
                        android:textColor="#000"
                        android:textSize="13dp"
                        android:textStyle="bold" />

                    <EditText
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:background="@null"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/tv_email"
                        android:id="@+id/et_count"
                        android:textStyle="bold"
                        android:textSize="18dp"
                        android:textColor="#000"
                        android:hint="12345678@qq.com"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>

                </RelativeLayout>

            </LinearLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginLeft="@dimen/dp1"
                android:layout_marginRight="@dimen/dp1"
                />
            <LinearLayout
                android:id="@+id/ll_pwd"
                android:layout_marginTop="30dp"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
                <ImageView
                    android:layout_gravity="center"
                    android:layout_width="40dp"
                    android:layout_height="35dp"
                    app:srcCompat="@drawable/ic_password"
                    android:padding="6dp"
                    />
                <RelativeLayout
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content">
                    <TextView
                        android:layout_marginLeft="3dp"
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="密码"
                        android:textStyle="bold"
                        android:textSize="13dp"
                        android:id="@+id/tv_pwd"
                        android:textColor="#000"
                        />

                    <EditText
                        android:imeOptions="actionNext"
                        android:singleLine="true"
                        android:inputType="textPassword"
                        android:background="@null"
                        android:layout_marginTop="5dp"
                        android:layout_marginBottom="5dp"
                        android:layout_below="@+id/tv_pwd"
                        android:id="@+id/et_pwd"
                        android:textStyle="bold"
                        android:textColor="#111"
                        android:textSize="18dp"
                        android:hint="123456789"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"/>
                </RelativeLayout>

            </LinearLayout>
            <TextView
                android:layout_width="match_parent"
                android:layout_height="1dp"
                android:background="#000"
                android:layout_marginLeft="@dimen/dp1"
                android:layout_marginRight="@dimen/dp1"
                />

            <TextView
                android:layout_marginTop="20dp"
                android:text="登    录"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:background="@drawable/shape_round_green"
                android:textColor="#fff"
                android:textStyle="bold"
                android:id="@+id/submit_log"
                android:textSize="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>

            <TextView
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="@dimen/dp15"
                android:text="忘记密码?"
                android:textStyle="bold"
                android:gravity="center"
                />

            <TextView
                android:layout_marginTop="30dp"
                android:text="注    册"
                android:id="@+id/tv_toreg"
                android:gravity="center"
                android:padding="@dimen/dp10"
                android:background="@drawable/shape_round_bloder_white"
                android:textColor="#4D7672"
                android:textStyle="bold"
                android:textSize="@dimen/dp20"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"/>
        </LinearLayout>
    </RelativeLayout>
</LinearLayout>